<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="2">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:weightSum="2" android:layout_marginBottom="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="left"
                android:gravity="left|start" android:id="@+id/lsol" android:layout_marginRight="1dp"
                android:background="@drawable/layout_bg">
            <TextView
                    android:scrollbars = "vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/sol" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
                    android:textSize="15sp" android:textColor="#ff000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="right"
                android:id="@+id/lsag" android:layout_marginLeft="1dp" android:background="@drawable/layout_bg">
            <TextView
                    android:scrollbars = "vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/sag" android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
                    android:textSize="15sp" android:textColor="#ff000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>